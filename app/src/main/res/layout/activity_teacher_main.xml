<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.learnfun.super8team.learnfun.Activity.TeacherMainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="8dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="367dp"
            android:layout_height="139dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/goToToday"
                android:layout_width="wrap_content"
                android:layout_height="131dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="@string/go_to_today"
                android:textColor="@color/colorWrite"
                android:elevation="5dp"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.08">

            <Button
                android:id="@+id/goToPlanTable"
                android:layout_width="wrap_content"
                android:layout_height="86dp"
                android:layout_weight="1.00"
                android:background="@color/colorAccent"
                android:textColor="@color/colorWrite"
                android:elevation="5dp"
                android:textSize="20dp"
                android:text="@string/go_to_plantable" />

            <Button
                android:id="@+id/goToStudentList"
                android:layout_width="wrap_content"
                android:layout_height="86dp"
                android:layout_weight="1.03"
                android:background="@color/colorPurple"
                android:elevation="5dp"
                android:text="@string/go_to_studentlist"
                android:textColor="@color/colorWrite"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="367dp"
            android:layout_height="105dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/goToContens"
                android:layout_width="wrap_content"
                android:layout_height="97dp"
                android:layout_weight="1"
                android:background="@color/colorSky"
                android:textColor="@color/colorWrite"
                android:elevation="5dp"
                android:textSize="20dp"
                android:text="@string/go_to_contents" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:layout_weight="0.25">


            <Button
                android:id="@+id/goToCheckList"
                android:layout_width="wrap_content"
                android:layout_height="78dp"
                android:layout_weight="1"
                android:background="@color/colorGreen"
                android:elevation="5dp"
                android:textColor="@color/colorWrite"
                android:textSize="20dp"
                android:text="@string/go_to_checklist" />

            <Button
                android:id="@+id/goToRecommend"
                android:layout_width="wrap_content"
                android:layout_height="77dp"
                android:text="@string/go_to_recommend"
                android:background="@color/colorOrange"
                android:textColor="@color/colorWrite"
                android:elevation="5dp"
                android:textSize="20dp"
                android:layout_weight="0.93" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_weight="0.25">

        <Button
            android:id="@+id/goToHistory"
            android:layout_width="wrap_content"
            android:layout_height="86dp"
            android:layout_weight="1.00"
            android:background="@color/colorAccent"
            android:textColor="@color/colorWrite"
            android:textSize="20dp"
            android:text="@string/history_List" />
    </LinearLayout>



    </LinearLayout>
</android.support.constraint.ConstraintLayout>
