<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorYellow"
    android:orientation="vertical"
    tools:context="com.learnfun.super8team.learnfun.Activity.StudentMainActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="학생용"
            android:layout_margin="20dp"
            android:textSize="20dp" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/goToHistoryDetail"
            android:layout_width="148dp"
            android:layout_height="139dp"
            android:layout_weight="1"
            android:background="#00ff0000"
            app:srcCompat="@drawable/today100"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="25dp"
            android:text="@string/go_to_today"
            tools:layout_editor_absoluteX="151dp"
            tools:layout_editor_absoluteY="155dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/goToSurvey"
            android:layout_width="94dp"
            android:layout_height="88dp"
            android:layout_weight="1"
            android:background="#00ff0000"
            app:srcCompat="@drawable/survey60"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="187dp" />

        <ImageButton
            android:id="@+id/goToContens"
            android:layout_width="93dp"
            android:layout_height="91dp"
            android:layout_weight="1"
            android:background="#00ff0000"
            app:srcCompat="@drawable/game60"
            tools:layout_editor_absoluteX="134dp"
            tools:layout_editor_absoluteY="187dp" />

        <ImageButton
            android:id="@+id/goToHistory"
            android:layout_width="92dp"
            android:layout_height="88dp"
            android:layout_weight="1"
            android:background="#00ff0000"
            app:srcCompat="@drawable/history60"
            tools:layout_editor_absoluteX="252dp"
            tools:layout_editor_absoluteY="187dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textAlignment="center"
            android:textSize="20dp"
            android:text="@string/survey_List"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="275dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:textAlignment="center"
            android:textSize="20dp"
            android:text="@string/go_to_contents"
            tools:layout_editor_absoluteX="151dp"
            tools:layout_editor_absoluteY="278dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textAlignment="center"
            android:textSize="20dp"
            android:text="@string/history_List"
            tools:layout_editor_absoluteX="270dp"
            tools:layout_editor_absoluteY="275dp" />
    </LinearLayout>

</LinearLayout>
